// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id              String        @id @default(cuid())
  email           String        @unique
  password        String
  username        String        @unique
  socketId        String?
  createdAt       DateTime      @default(now())
  ownedRooms      Room[]        @relation("RoomOwner")
  participatingIn Participant[]
  sentInvites     Invite[]      @relation("InvitingUser")
  receivedInvites Invite[]      @relation("InvitedUser")
}

model Room {
  id           String        @id @default(cuid())
  name         String
  createdAt    DateTime      @default(now())
  ownerId      String
  owner        User          @relation("RoomOwner", fields: [ownerId], references: [id])
  maxUsers     Int           @default(5)
  participants Participant[]
  invites      Invite[]
}

model Participant {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  roomId     String
  room       Room     @relation(fields: [roomId], references: [id])
  instrument String
  createdAt  DateTime @default(now())

  @@unique([roomId, userId])
  @@unique([roomId, instrument])
}

model Invite {
  id            String       @id @default(cuid())
  status        InviteStatus @default(PENDING)
  roomId        String
  room          Room         @relation(fields: [roomId], references: [id])
  invitedById   String
  invitedBy     User         @relation("InvitingUser", fields: [invitedById], references: [id])
  invitedUserId String
  invitedUser   User         @relation("InvitedUser", fields: [invitedUserId], references: [id])
  createdAt     DateTime     @default(now())

  @@unique([roomId, invitedUserId])
}

enum InviteStatus {
  PENDING
  ACCEPTED
  DECLINED
}
