
// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String @id @default(cuid())
  username  String
  createdAt DateTime @default(now())
  jams      JamSession[]
}

model JamSession {
  id        String @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  events    Json // Array of note events (for recording)
  users     User[]
}
