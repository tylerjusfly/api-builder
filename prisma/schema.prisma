
// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  userId    String @id @default(cuid())
  username  String @unique
  securityQuestion String
  securityAnswer   String
  createdAt DateTime @default(now())
  ownedRooms Room[] @relation("RoomOwner")
  participatedRooms Participant[]
  sentInvitations Invitation[] @relation("Inviter")
}

model Instrument {
  instrumentId String @id @default(cuid())
  name         String
  participants Participant[]
}

model Room {
  roomId      String @id @default(cuid())
  owner       User   @relation("RoomOwner", fields: [ownerId], references: [userId])
  ownerId     String
  participants Participant[]
  maxUsers    Int @default(5)
  createdAt   DateTime @default(now())
  invitations Invitation[]
  jamSessions JamSession[]
}

model Participant {
  user         User       @relation(fields: [userId], references: [userId])
  userId       String
  instrument   Instrument @relation(fields: [instrumentId], references: [instrumentId])
  instrumentId String
  room         Room       @relation(fields: [roomId], references: [roomId])
  roomId       String

  @@id([userId, roomId])
}

model Invitation {
  invitationId    String   @id @default(cuid())
  room            Room     @relation(fields: [roomId], references: [roomId])
  roomId          String
  inviter         User     @relation("Inviter", fields: [inviterId], references: [userId])
  inviterId       String
  inviteeUsername String
  status          String   @default("pending") // "pending", "accepted", "declined"
  createdAt       DateTime @default(now())
}

model JamSession {
  id String @id @default(cuid())
  name String
  events Json
  createdAt DateTime @default(now())
  roomId String
  room Room @relation(fields: [roomId], references: [roomId])
}
