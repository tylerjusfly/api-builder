  "dependencies": {
    "@prisma/client": "^6.18.0",
    "express": "^4.21.2",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/node": "^20.12.12",
    "nodemon": "^3.1.0",
    "prisma": "^6.18.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5"
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  }
}
